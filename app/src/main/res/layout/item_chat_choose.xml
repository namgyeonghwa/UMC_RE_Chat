<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_chat_choose_new_date_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/item_chat_choose_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/item_chat_choose_new_date_time_line_1_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:background="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_chat_choose_new_date_time_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_chat_choose_new_date_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafessurround"
            android:text="@string/date_time"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_chat_choose_new_data_time_line_2_view"
            app:layout_constraintStart_toEndOf="@+id/item_chat_choose_new_date_time_line_1_view"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/item_chat_choose_new_data_time_line_2_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:background="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_chat_choose_new_date_time_tv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/item_chat_choose_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/chat_defualt_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_choose_new_date_time_layout" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/background_circle"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="@id/item_chat_choose_profile_iv"
        app:layout_constraintEnd_toEndOf="@id/item_chat_choose_profile_iv"
        app:layout_constraintStart_toStartOf="@id/item_chat_choose_profile_iv"
        app:layout_constraintTop_toTopOf="@id/item_chat_choose_profile_iv" />

    <TextView
        android:id="@+id/item_chat_choose_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/cafessurround"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:maxLines="1"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/item_chat_choose_profile_iv"
        app:layout_constraintTop_toTopOf="@+id/item_chat_choose_profile_iv" />

    <!--    <ImageView-->
    <!--        android:id="@+id/item_chat_choose_message_iv"-->
    <!--        android:layout_width="250dp"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:background="@drawable/selector_chat"-->
    <!--        app:layout_constraintTop_toTopOf="@+id/item_chat_choose_message_tv"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/item_chat_choose_message_tv"-->
    <!--        app:layout_constraintStart_toStartOf="@+id/item_chat_choose_message_tv"-->
    <!--        app:layout_constraintEnd_toEndOf="@+id/item_chat_choose_message_tv" />-->

    <RelativeLayout
        android:id="@+id/item_chat_choose_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/item_chat_choose_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_choose_name_tv">

        <TextView
            android:id="@+id/item_chat_choose_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_chat"
            android:fontFamily="@font/ibmplexsanskrlight"
            android:gravity="center_vertical"
            android:maxHeight="300dp"
            android:paddingStart="20dp"
            android:text="@string/message"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

<!--    <ImageView-->
<!--        android:id="@+id/item_chat_choose_delete_iv"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:src="@drawable/chat_delete_btn_blue"-->
<!--        android:background="@android:color/transparent"-->
<!--        android:layout_marginStart="-25dp"-->
<!--        android:layout_marginBottom="-25dp"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/item_chat_choose_message_layout"-->
<!--        app:layout_constraintStart_toEndOf="@+id/item_chat_choose_message_layout" />-->

    <TextView
        android:id="@+id/item_chat_choose_date_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cafessurroundair"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="@string/date_time"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/item_chat_choose_message_layout"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_choose_message_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>